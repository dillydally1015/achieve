<% if @blog.errors.any? %>
  <% @blog.errors.full_messages.each do |m| %>
    <p><%= m %></p>
  <% end %>
<% end %>

<%= form_with(model: @blog, local: true, url: choose_new_or_edit) do |form| %>
  <div class="blog_content">
    <%= form.text_area :content %>
  </div>
  <%= form.submit %>
<% end %>
<p><%= link_to '記事一覧', blogs_path %></p>
